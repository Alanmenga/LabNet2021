@model List<Mengassini.MVC.Models.ProductView>

@{
    ViewBag.Title = "Products Page";
}

<h1>Index de Products</h1>

<table class="table">
    <thead>
        <tr>
            <td scope="col">ID</td>
            <td scope="col">Nombre</td>
            <td scope="col">Cantidad</td>
            <td scope="col">Precio</td>
            <td scope="col">Unidades en Stock</td>
            <td scope="col">Unidades Ordenadas</td>
            <td scope="col">Action</td>
            <td scope="col">Action</td>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
        <tr>
            <td scope="row">@product.Id</td>
            <td>@product.Nombre</td>
            <td>@product.Cantidad</td>
            <td>@product.Precio</td>
            <td>@product.UStock</td>
            <td>@product.UOrdenadas</td>
            <td>@Html.ActionLink("Update", "Update", new { id = product.Id })</td>
            <td>@Html.ActionLink("Borrar", "Delete", new { id = product.Id }, new { onclick = "return confirm('Estas seguro que deseas borrar?')" })</td>
        </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Insertar Nuevo Producto", "Insert")
</div>